<?xml version="1.0" encoding="utf-8"?>
<com.skeleton.mvp.ui.customview.GridViewItem xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/screen_padding"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivPlanIcon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        tools:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tvPlanName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivPlanIcon"
        android:layout_marginTop="@dimen/screen_padding"
        android:gravity="center"
        android:textAppearance="@style/CustomTextAppearance.Semibold"
        tools:text="@string/app_name" />
</com.skeleton.mvp.ui.customview.GridViewItem>